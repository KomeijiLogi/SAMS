@model SAMS.Web.Areas.Admin.Models.Fault.Fault

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">新建故障</h4>
</div>
<form action="/admin/fault/create" class="form-horizontal" data-ajax="true" data-ajax-begin="showPopLoading" data-ajax-complete="hidePopLoading" data-ajax-failure="showException" data-ajax-success="editSucess" id="editForm" method="post">
    <div class="modal-body">
        <div class="scroller" style="height: 200px" data-always-visible="1" data-rail-visible1="1">
            <!-- BEGIN FORM-->
            <input id="ID" name="ID" type="hidden" value="" />

            <div class="form-group">
                <label class="control-label col-md-3">
                    故障名称<span class="required">*</span>
                </label>
                <div class="col-md-7">
                    <input class="form-control" data-val="true" 
                           data-val-length="故障名称长度不能超过50个字符" data-val-length-max="50" 
                           data-val-regex="故障名称不能包含空字符" 
                           data-val-regex-pattern="^[^\s]+$" 
                           data-val-required="故障名称不能为空" id="Name" name="Name" placeholder="请输入故障名称" type="text" value="" />
                    <span class="field-validation-valid esh-error-lable" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                </div>
            </div>

           


            <!-- END FORM-->
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="cancelbtn" data-dismiss="modal" class="btn btn-default">取消</button>
        <button type="submit" class="btn green">确定</button>
    </div>
</form>