@using Abp.Extensions
@using SAMS.Web.Areas.Admin.Models.Common.Modals
@model SAMS.Web.Areas.Admin.Models.Customer.GetDetailViewModel



<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">编辑客户</h4>
</div>
<form action="/admin/customer/edit" class="form-horizontal" data-ajax="true" data-ajax-begin="showPopLoading" 
      data-ajax-complete="hidePopLoading" data-ajax-failure="showException" data-ajax-success="editSucess" id="editForm" method="post">
    <div class="modal-body">
        <div class="scroller" style="height: 360px" data-always-visible="1" data-rail-visible1="1">
            <!-- BEGIN FORM-->
            <input id="ID" name="ID" type="hidden" value="@Model.Id" />
            <div class="form-group">
                <label class="control-label col-md-3">
                    客户名称<span class="required">*</span>
                </label>
                <div class="col-md-7">
                    <input class="form-control" data-val="true" data-val-length="名称长度不能超过50个字符" data-val-length-max="50" d
                           ata-val-regex="不能包含空字符" data-val-regex-pattern="^[^\s]+$" data-val-required="名称不能为空" 
                           id="Name" name="Name" placeholder="请输入客户名称" type="text" value="@Model.Name" />
                    <span class="field-validation-valid esh-error-lable" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">
                    电话
                </label>
                <div class="col-md-7">
                    <input class="form-control" data-val="true" id="Mobile" name="Mobile" placeholder="请输入客户电话" type="text" value="@Model.Mobile" />
                   
                    <span class="field-validation-valid esh-error-lable" data-valmsg-for="Mobile" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">
                    邮箱
                </label>
                <div class="col-md-7">
                    <input class="form-control" data-val="true" data-val-regex="请输入正确的Email格式！" 
                          
                           @*data-val-regex-pattern="^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$"*@ 
                           id="Mail" name="Mail" placeholder="请输入客户邮箱" type="text" value="" />
                    <span class="field-validation-valid esh-error-lable" data-valmsg-for="Mail" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">所属区域<span class="required">*</span></label>
                <div class="col-md-7 clear-padding-right" name="area">
                    <div class="col-md-4 clear-padding-left">
                        <select class="form-control select2" id="sel_pro" name="sel_pro" data_val="true" data_val_required="区域不能为空">
                            <option value="">省份</option>
                        </select>
                    </div>
                    <div class="col-md-4 clear-padding-left">
                        <select class="form-control select2" id="sel_city" name="sel_city" data-val="true" data-val-required="区域不能为空">
                            <option value="">城市</option>
                        </select>
                    </div>
                    <div class="col-md-4 clear-padding-left">
                        <select class="form-control select2" id="sel_distr" name="sel_distr" data-val="true" data-val-required="区域不能为空">
                            <option value="">区县</option>
                        </select>
                    </div>
                    <div class="clearfix">
                        <span class="field-validation-valid esh-error-lable" data-valmsg-for="Area" data-valmsg-replace="true"></span>  
                        <input class="esh-hide-area" data-val="true" data-val-length="区域长度不能超过50个字符" 
                               data-val-length-max="50" data-val-required="区域不能为空" id="Area" name="Area" type="text" 
                               value="@Model.Area" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">详细地址<span class="required">*</span></label>
                <div class="col-md-7">
                    <textarea class="form-control" cols="20" data-val="true" data-val-length="地址长度不能超过100个字符" data-val-length-max="100" data-val-regex="不能包含空字符" data-val-regex-pattern="^[^\s]+$" data-val-required="地址不能为空" id="Address" name="Address" placeholder="详细地址信息..." rows="3">
                        @Model.Address
                    </textarea><span class="help-block">100个字以内</span>
                    <span class="field-validation-valid esh-error-lable" data-valmsg-for="Address" data-valmsg-replace="true"></span>
                </div>
            </div>
            <!-- END FORM-->
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" id="cancelbtn" data-dismiss="modal" class="btn btn-default">取消</button>
        <button type="submit" class="btn green">确定</button>
    </div>
</form>
<script>
    

        
    document.getElementById("Address").value = document.getElementById("Address").value.replace(/(^\s*)|(\s*$)/g, "");
   
    
</script>