
@model SAMS.Web.Areas.Admin.Models.Accessory.NewExportEnterStockOrderDetailViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title ">
        入库单
    </h4>
</div>

<div class="modal-body">
    <div class="scroller" style="height: 420px" data-always-visible="1" data-rail-visible1="1">
        <div class="esh-stock-order-modal clear-padding-right">
            <div class="clearfix esh-assigned-block ">
                <div class="row margin-top-10">
                    <div class="col-md-4 col-xs-4">
                        <label class="control-label">出入库类别：@Model.bill.CategoryName</label>
                    </div>
                    <div class="col-md-4 col-xs-4">
                        <label class="control-label">出入库人员：@Model.bill.StraffName</label>
                    </div>
                    <div class="col-md-4 col-xs-4">
                        <label class="pull-right control-label">NO.@Model.bill.Id</label>
                    </div>
                </div>
            </div>
            <div class="table-scrollable">
                <table class="table table-striped dataTable table-bordered table-hover" id="tableList">
                    <thead>
                        <tr>
                            <th style="width:100px;">
                                备件编码
                            </th>
                            <th style="min-width:70px;">
                                名称
                            </th>
                            <th style="min-width:70px;">
                                规格
                            </th>
                           
                            <th style="width:40px;">
                                单位
                            </th>
                            <th style="width:40px;">
                                数量
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.bill.StockBillEntries)
                        {
                        <tr class="odd gradeX">
                            <td>
                                @item.AccessoryNumber
                            </td>
                            <td>
                                @item.AccessoryName
                            </td>
                           
                            <td>
                                @item.AccessoryModel
                            </td>
                            <td>
                                @item.AccessoryUnit
                            </td>
                            <td>
                                @item.Count
                            </td>
                        </tr>
                        }
                       
                    </tbody>
                </table>
            </div>
            <div class="clearfix esh-assigned-block margin-top-10">
                <label class="pull-left control-label">备注：@Model.bill.Description</label>
                <div class="pull-right col-md-6">
                    <label class="pull-left control-label">操作人员：@Model.bill.CreatorName</label>
                    <label class="pull-right control-label">操作日期：@Model.bill.CreationTime.ToString("yyyy-MM-dd")</label>
                </div>
            </div>
        </div>
    </div>
</div>